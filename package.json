{
  "name": "Soundness",
  "version": "1.0.0",
  "description": "be more productive with sounds",
  "dependencies": {
    "menubar": "*"
  },
  "main": "main.js",
  "scripts": {
    "build-mac": "electron-packager . Soundness --platform=mas --arch=x64 --icon=Icon.icns --app-bundle-id com.lawrencewu.soundness",
    "build-win": "electron-packager . Soundness --platform=win32 --arch=ia32 --version=0.36.0",
    "build-lin": "electron-packager . Soundness --platform=linux --arch=ia32 --version=0.36.0 --icon=Icon.icns",
    "start": "electron ."
  }
}
